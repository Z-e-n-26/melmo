{
    "version": 2,
    "outputDirectory": "dist",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/api/index.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/dist/assets/$1"
        },
        {
            "source": "/(.*)\\.(png|jpg|jpeg|gif|svg|ico|css|js)",
            "destination": "/dist/$1.$2"
        },
        {
            "source": "/(.*)",
            "destination": "/dist/index.html"
        }
    ]
}